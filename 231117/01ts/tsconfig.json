{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "strict": false,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": { "*": ["src/*"] },
    "sourceMap": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "strictPropertyInitialization": false
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}
